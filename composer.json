{
    "name":        "bernard/laravel",
    "description": "Bernard bindings for Laravel",
    "license" : "MIT",

    "authors": [{
        "name": "Ulrich Kautz",
        "email": "ulrich.kautz@gmail.com"
    }],

    "keywords": [
        "laravel",
        "bernard",
        "queue",
        "worker",
        "serviceprovider",
        "service-provider"
    ],

    "require": {
        "php"                : ">=5.3.0",
        "illuminate/support" : "~4.0.0",
        "bernard/bernard"    : ">=0.6,<1.0.0"
    },

    "require-dev": {
        "illuminate/foundation" : "~4.0.0",
        "orchestra/testbench"   : "~2.0.0",
        "mockery/mockery"       : "~0.7.0"
    },

    "autoload": {
        "classmap": [
            "src/migrations"
        ],
        "psr-0": {
            "Bernard\\Laravel\\": "src/"
        }
    }
}
